{
    "name": "Read Medium for free",
    "description": "Read Medium stories without leaving the page if you reached to free reading limit.",
    "manifest_version": 2,
    "version": "2.4",
    "content_scripts": [{
        "js": [ "content.js" ],
        "permissions": [
            "https://*.medium.com/*",
            "https://cdn.optimizely.com/*",
            "tabs",
            "activeTab",
            "webRequest",
            "webRequestBlocking",
            "storage"
        ],
        "matches": [
            "https://*.medium.com/*",
            "https://towardsdatascience.com/*",
            "https://*.towardsai.net/*",
            "https://betterprogramming.pub/*"
        ]
    }],
     "icons": {
        "128": "icons/128.png",
        "48": "icons/48.png",
        "16": "icons/16.png"
    }
}